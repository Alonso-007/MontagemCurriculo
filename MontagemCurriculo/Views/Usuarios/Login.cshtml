@model MontagemCurriculo.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="formulario">
    <h5>Login de usuários</h5>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="input-field col-md-4 s6">
                        <input asp-for="Email" id="email" type="email" class="validate" />
                        <label for="Email">Email</label>
                        <span asp-validation-for="Email" class="red-text darken-3"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col-md-4 s6">
                        <input asp-for="Senha" id="senha" type="password" class="validate" />
                        <label for="Senha">Senha</label>
                        <span asp-validation-for="Senha" class="red-text darken-3"></span>
                    </div>
                </div>

                <div class="row">
                    <input type="submit" value="Logar" class="btn btn-small green dark-1" /> &nbsp;
                    <a asp-action="Registro" asp-controller="Usuarios">Registrar</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model MontagemCurriculo.Models.TipoCurso

@{
    ViewData["Title"] = "Atualizar " + Model.Tipo;
}

<div class="formulario">



    <h4>Atualizar @Model.Tipo</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TipoCursoId" />

                <div class="row">
                    <div class="input-field col-md-4 s6">
                        <input asp-for="Tipo" id="tipo" type="text" class="validate" />
                        <label for="Email">Tipo de curso</label>
                        <span asp-validation-for="Tipo" class="red-text darken-3"></span>
                    </div>
                </div>

                <div class="row">
                    <input type="submit" value="Atualizar" class="btn btn-small green dark-1" /> &nbsp;
                    <a asp-action="Index">Voltar</a>
                </div>

            </form>
        </div>
    </div>

</div>